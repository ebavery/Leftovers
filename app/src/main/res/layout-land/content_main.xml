<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ebavery.leftovers.MainActivity"
    tools:showIn="@layout/activity_main">
    <TextView
        android:text="@string/txtInstructions"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtInstructions"
        android:layout_below="@id/toolbar"
        android:textColor="@color/colorTertiary"
        android:textSize="24sp"
        android:layout_marginTop="100dp"

        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fridge_shelves_land"
        android:padding="0dp" android:layout_margin="0dp"/>
    <GridView
        android:layout_height="match_parent"
        android:id="@+id/gridViewLeftovers"
        android:columnWidth="160dp"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="10dp"

        android:layout_marginBottom="30dp" android:paddingLeft="20dp"
        android:numColumns="3" android:layout_width="400dp" android:layout_marginLeft="90dp"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDate"
        android:text="@string/txtDate" android:textColor="@color/colorPrimary"
        android:singleLine="false" android:layout_marginBottom="8dp"
        android:textStyle="bold" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>